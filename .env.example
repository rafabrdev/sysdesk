# .env.example - Task T0.001
# Template for environment variables - Copy to .env and fill values
# BR SISTEMAS - Sysdesk Project

# ============
# Environment
# ============
NODE_ENV=development
TZ=America/Sao_Paulo

# ============
# Database (MariaDB)
# ============
DATABASE_URL="mysql://sysdesk:sysdesk@localhost:3306/sysdesk"

# ============
# Authentication
# ============
JWT_SECRET=change_me_to_secure_random_string_32_chars_min
JWT_REFRESH_SECRET=change_me_to_another_secure_random_string_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# ============
# Redis (Queue/Cache/Socket.IO)
# ============
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============
# WebSocket
# ============
SOCKET_PORT=3001
SOCKET_CORS_ORIGIN=http://localhost:3000

# ============
# Mail Service
# ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
MAIL_FROM=noreply@sysdesk.local

# ============
# LGPD Compliance
# ============
RETENTION_DAYS=365
AES_SECRET=change_me_must_be_exactly_32_characters_long!!!

# ============
# Application URLs
# ============
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3333
PUBLIC_URL=http://localhost

# ============
# Ports
# ============
FRONTEND_PORT=3000
BACKEND_PORT=3333

# ============
# Security
# ============
CORS_ORIGINS=http://localhost:3000,http://localhost
SESSION_SECRET=change_me_to_secure_session_secret
COOKIE_SECURE=false

# ============
# Monitoring (Optional)
# ============
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=
